<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:background="@color/bg_screen5"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_centerInParent="true">

    <ImageView
        android:layout_height="170dp"
        android:layout_width="170dp"
        android:src="@drawable/timelimit"
        android:padding="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/slide_title"
        android:textColor="@android:color/white"
        android:text="채팅 시간제한"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/slide_desc"
        android:textColor="@android:color/white"
        android:text="여러분의 재미와 다양한 유저들의 연결을 위해 한 채팅방당 15분의 시간제한을 두었습니다."
        android:textAlignment="center"
        android:paddingRight="@dimen/desc_padding"
        android:paddingLeft="@dimen/desc_padding"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/slide_desc"
        android:textColor="@android:color/white"
        android:text="캠퍼스 내의 다양한 사람들이 모여있는만큼 자랑스러운 가천인의 매너있는 채팅 부탁드립니다."
        android:textAlignment="center"
        android:paddingRight="@dimen/desc_padding"
        android:paddingLeft="@dimen/desc_padding"
        android:layout_marginTop="20dp"/>


</LinearLayout>

</RelativeLayout>